: ${JAVA_HOME:=$(java-config ${SOLR_JVM:+--select-vm ${SOLR_JVM}} --jre-home)}
: ${SOLR_DATA_HOME:=/var/lib/solr}
: ${SOLR_HOST:=localhost}
: ${SOLR_PORT:=8983}
: ${SOLR_STOP_KEY:=solrrocks}
: ${SOLR_TIMEZONE:=UTC}
: ${SOLR_LOG_DIR:=/var/log/solr}
: ${SOLR_MODULE:=http}

SOLR_TIP=/opt/solr
SOLR_SERVER_DIR=${SOLR_TIP}/server
SOLR_HOME_DIR=${SOLR_SERVER_DIR}/solr

PIDDIR=/var/run/solr
PIDFILE=${PIDDIR}/solr-${SOLR_PORT}.pid
export SOLR_PID_DIR=${PIDDIR}

depend() {
	use dns logger net
}

start() {
	ebegin "Starting ${RC_SVCNAME}"

	mkdir -p ${PIDDIR}
	chown ${SOLR_USER}:${SOLR_GROUP} ${PIDDIR}

	start-stop-daemon --start \
        --quiet \
		--chdir ${SOLR_SERVER_DIR} \
		--user ${SOLR_USER}:${SOLR_GROUP} \
		--exec ${SOLR_TIP}/bin/solr \
		-- \
		  start \
		  -s ${SOLR_HOME_DIR} \
          -d ${SOLR_SERVER_DIR} \
          -t ${SOLR_DATA_HOME} \
          -h ${SOLR_HOST} \
          -p ${SOLR_PORT} \
		  -k ${SOLR_STOP_KEY} \
		  -a "${JAVA_OPTS}"

	eend $?
}

stop() {
	ebegin "Stopping ${RC_SVCNAME}"

    start-stop-daemon --stop \
        --quiet \
        --pidfile ${PIDFILE} \
        --exec ${SOLR_TIP}/bin/solr \
        -- \
          stop \
          -s ${SOLR_HOME_DIR} \
          -d ${SOLR_SERVER_DIR} \
          -t ${SOLR_DATA_HOME} \
          -k ${SOLR_STOP_KEY} \
          -a "${JAVA_OPTS}"

	eend $?
}

